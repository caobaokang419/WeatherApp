<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebase.FirebaseListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/interstitial_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="插页广告" />

        <Button
            android:id="@+id/rewarded_video_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="激励广告" />

        <Button
            android:id="@+id/fcm_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="云推送(FCM)" />

        <Button
            android:id="@+id/remote_config_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="云配置(Remote config)" />

        <Button
            android:id="@+id/analytics_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分析(Analytics)" />

        <Button
            android:id="@+id/crash_report_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="崩溃报告(Crash report)" />

        <Button
            android:id="@+id/inappmessage_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="InAppMessage(应用内消息)" />

        <Button
            android:id="@+id/performance_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Performance(性能优化)" />

        <Button
            android:id="@+id/auth_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="身份认证(Auth)" />

        <Button
            android:id="@+id/invite_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="InVite(邀请)" />

        <Button
            android:id="@+id/dynamiclink_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DynamicLink(动态链接)" />

        <Button
            android:id="@+id/indexing_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Indexing(索引)" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>